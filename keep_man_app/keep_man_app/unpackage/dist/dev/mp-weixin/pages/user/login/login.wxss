
.login {
  margin-top: 56rpx;
  margin-right: 72rpx;
  margin-left: 72rpx;
}
.login-title {
  font-size: 56rpx;
  font-weight: 500;
}
.login-explain {
  font-size: 28rpx;
  color: #9E9E9E;
}
.login-phone {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 2rpx #dedede solid;
  margin-top: 56rpx;
  margin-bottom: 40rpx;
}
.login-phone-getcode {
  color: #3F51B5;
  text-align: center;
  min-width: 140rpx;
}
.login-code {
  border-bottom: 2rpx #dedede solid;
}
.login-username {
  margin-top: 56rpx;
  margin-bottom: 40rpx;
  border-bottom: 2rpx #dedede solid;
}
.login-password {
  border-bottom: 2rpx #dedede solid;
}
.btn-login {
  margin-top: 100rpx;
  border-radius: 50rpx;
  font-size: 16px;
  color: #fff;
  background: -webkit-linear-gradient(left, #88a1f9, #9ac6ff);
  background: linear-gradient(to right, #88a1f9, #9ac6ff);
}
.btn-login-active {
  background: -webkit-linear-gradient(left, #365fff, #36bbff);
  background: linear-gradient(to right, #365fff, #36bbff);
}
.btn-login-hover {
  background: -webkit-linear-gradient(left, #365fdd, #36bbfa);
  background: linear-gradient(to right, #365fdd, #36bbfa);
}
button[disabled] {
  color: #fff;
}
.login-mode {
  text-align: center;
  margin-top: 32rpx;
}

